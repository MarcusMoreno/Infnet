@model IEnumerable<FaculdadeSI.Models.Perfil>

@{
    ViewBag.Title = "Perfil";
}

<h2>Perfis</h2>

<p>
    @Html.ActionLink("Criar Perfil", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Descrição do Perfil")
          </th>
        <th>
            @Html.Label("Status")
          </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DescricaoPerfil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PerfilStatus)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdPerfil }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdPerfil }) 
            @*@Html.ActionLink("Delete", "Delete", new { id=item.IdPerfil })*@
        </td>
    </tr>
}

</table>
