@model FaculdadeSI.Models.Pergunta

@{
    ViewBag.Title = "Create";
    WebGrid grid = new WebGrid();
}
 <head>
    @Scripts.Render("~/bundles/jquery")
</head>

<h2>Criar pergunta</h2>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Pergunta</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.DescricaoPergunta, "Descrição da pergunta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescricaoPergunta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescricaoPergunta, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoRespostas, "Resposta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">                          
                    @Html.DropDownList("TipoResposta", null, new { multiple = "multiple", @id ="tipoResposta" })    
                                          
             </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.PerguntaStatus, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.PerguntaStatus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PerguntaStatus, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    <button class="btn" style="width:90px">@Html.ActionLink("Voltar", "Index")</button>
</div>

<script type="text/javascript">
    $("#tipoResposta").select2();
</script>

@section Scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }

